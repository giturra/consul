<% if header.present? %>
  <div class="jumbo highlight" style="padding: 0;">
    <% if header.image.present? %>
        <div style="background-color: black;">
          <%= image_tag(header.image_url(:original),
                        class: "jumbo-image",
                        alt: header.image.title) %>
          <div class="jumbo-content">
            <span><%= header.label %></span>
            <h1><%= header.title %></h1>
            <p class="lead"><%= header.description %></p>
            <div class="small-12 medium-6 large-4 small-centered">
              <%= link_to header.link_text, header.link_url, class: "button  rounded-button" %>
            </div>
          </div>
        </div>
      <% end %>
  </div>
<% end %>
