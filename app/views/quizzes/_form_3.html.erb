<%= render "shared/globalize_locales", resource: @proposal %>

<%= form_for(@quiz, url: form_url) do |f| %>

  <div class="row column quiz-form">
    <div class="small-12 column">
      <label for="q8">¿Cómo pueden los niños, niñas y adolescentes colaborar con el seguimiento al cumplimiento del Plan Nacional de Derechos Humanos?</label>
      <%= text_area_tag 'q8', nil, rows: 4, maxlength: 1000, required: true %>
      <br/><br/>
    </div>

    <div class="small-12 column">
      <label for="q9">¿Te gustaría ser contactado/a para participar del seguimiento al cumplimiento del Plan Nacional de Derechos Humanos?</label><br/>
        <%= radio_button_tag 'q9', 'Si', required: true %>
        <%= label_tag "q9_Si", 'Si' %><br/>
        <%= radio_button_tag 'q9', 'No' %>
        <%= label_tag "q9_No", 'No' %><br/>
      <br/><br/>
    </div>

    <input type="hidden" id="quiz_id" name="quiz_id" value="<%= params[:quiz_id] %>">
    <input type="hidden" id="step" name="step" value="3">

    <div class="actions small-12 column">
      <button id="submit" type="submit" class="button">Continuar</button>
    </div>
  </div>
<% end %>
