<div id="stats" class="stats">
  <ul class="menu align-center">
    <li><a href="?type=1">Diagnósticos de acción</a></li>
    <li><a href="?type=2">Sugerencias de acciones</a></li>
    <li><a href="?type=3">Sugerencias de monitoreo</a></li>
  </ul>

  <% @allow_params = ['1', '2', '3'] %>

  <% if params[:type].present? %>
    <% if @allow_params.include? params[:type] %>
      <%= render 'type_%s' % [params[:type]] %>
    <% else %>
      <%= render 'type_1' %>
    <% end %>
  <% else %>
    <%= render 'type_1' %>
  <% end %>

</div>
